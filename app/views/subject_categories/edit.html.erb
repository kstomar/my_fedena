			<div class="label-field-pair">
			  <label><%= t('edit_category') %>: <%= @subject_category.name %> </label>
			  <%= hidden_field_tag :id, @subject_category.id %>
			<div class="text-input-bg"> <%= text_field_tag :name, @subject_category.name %></div></div>
